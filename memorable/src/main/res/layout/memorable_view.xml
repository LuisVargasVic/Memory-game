<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/main_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:focusableInTouchMode="true"
		android:orientation="vertical" android:visibility="visible">
	
	<RelativeLayout
			android:id="@+id/rl_user_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<TextView
				android:id="@+id/tv_user_movements"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="12dp"
				android:textSize="18sp"
				android:text="0 movimientos"
				tools:ignore="RtlSymmetry"/>
		
		<TextView
				android:id="@+id/tv_user_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentTop="true"
				android:layout_margin="12dp"
				android:textSize="18sp"
				android:text="0 segundos"
				tools:ignore="RtlSymmetry" />
	
	</RelativeLayout>
	
	<GridView
			android:id="@+id/grid_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/grid_view_margin"
			android:gravity="center"
			android:numColumns="3"
			android:horizontalSpacing="@dimen/grid_view_horizontal"
			android:verticalSpacing="@dimen/grid_view_vertical"
			android:layout_below="@+id/rl_user_info"
			tools:listitem="@layout/image_layout_three" />

</RelativeLayout>